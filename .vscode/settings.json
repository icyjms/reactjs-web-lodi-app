{
  "editor.formatOnSave": true,
  "files.exclude": {
    "**/.git": true,
    "**/.prettierrc": true,
    "**/.editorconfig": true,
    "**/jsconfig.json": true,
    "**/.prettierignore": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/.eslintrc.js": true,
    "**/.eslintignore": true,
    "**/.eslintrc.dev.js": true,
    "**/.vscode": true
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.tabSize": 2,
  "eslint.options": {
    "configFile": ".eslintrc.js"
  }
}
